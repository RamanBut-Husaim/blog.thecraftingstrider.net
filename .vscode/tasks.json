  "version": "2.0.0",
  "tasks": [
    {
      "label": "build hugo (staging)",
      "type": "shell",
      "command": "hugo -b https://blog-thecraftingstrider-stg.rakkattakka.workers.dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build wrangler (staging)",
      "type": "shell",
      "command": "wrangler build --env staging",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build (staging)",
      "group": "build",
      "dependsOn": [
        "build hugo (staging)",
        "build wrangler (staging)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "publish (staging)",
      "type": "shell",
      "command": "wrangler publish --env staging",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": [
        "build (staging)"
      ],
      "problemMatcher": []
    }
  ]
}